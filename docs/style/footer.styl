//main: styles.styl
grayLight = #ededed
grayMedium = #8a8a8a
grayDark = #222

footerHeight = 15rem

#appFooter
  margin-top: 2em
  width: 100%
  left 0
  bottom 0
  box-sizing: border-box
  box-shadow inset 0 9px 16px -12px grayDark
  padding 1em 3em
  background darken(grayLight, 10)
  .descr
    a
      margin-left .5em
    strong
      margin 0 .5em
  .footerCont
    margin auto
    max-width pageWidthLimit
    .projLogoCont
      margin 1em auto
      text-align center
      a
        opacity .4
        margin 0 1em
        display inline-block
        text-decoration none
        transition opacity .3s
        vertical-align middle
        img
          max-width 100%
          max-height 100%
          width 7em
          filter saturate(0%)
          -webkit-filter saturate(0%)
          transition all .3s

        &:hover
          opacity 1
          filter none
          img
            filter saturate(100%)
            -webkit-filter saturate(100%)
